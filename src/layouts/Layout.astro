---
import '../styles/global.css'
import '@fontsource-variable/open-sans'
import openSansWoff2 from '@fontsource-variable/open-sans/files/open-sans-latin-wght-normal.woff2?url'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={openSansWoff2}
      crossorigin="anonymous"
    />
    <title>Proyecto Ciudades Hermanas</title>
    <meta
      name="description"
      content="Proyecto de ayuda social que conecta comunidades entre Ecuador y Estados Unidos"
    />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta
      name="apple-mobile-web-app-title"
      content="Proyecto Ciudades Hermanas"
    />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html {
    font-family: 'Open Sans Variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    line-height: 1.6;
  }

  * {
    box-sizing: border-box;
  }
</style>
